<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
    <mime-type type="application/x-itd">
        <comment>hrengin itd archive</comment>
        <icon name="application-x-itd"/>

	<magic priority="51">
		<match type="little32" offset="0" value="0x64746968"/>
	</magic>
	<!--glob pattern="*.itd"/-->
    </mime-type>
    <mime-type type="application/x-hpk">
	<comment>hrengin package/archive</comment>
        <icon name="application-x-hpk"/>
	<sub-class-of type="application/x-itd"/>
	<magic priority="52">
		<match type="little32" offset="0" value="0x64746968">
			<match type="little32" offset="16" value="0x616b7068"/>
		</match>
	</magic>
	<!--glob pattern="*.hpk"/-->
    </mime-type>
    <mime-type type="text/x-hrdf">
	<comment>hrengin document</comment>
        <acronym>HDF</acronym>
        <expanded-acronym>hrengin Data Format</expanded-acronym>
        <icon name="text-x-hrdf"/>
	<sub-class-of type="text/x-itd"/>
	<magic priority="50">
            <match value="!hdf-version " type="string" offset="0"/>
            <match value="!hdf-version\t" type="string" offset="0"/>
	</magic>
	<glob pattern="*.hdf">
	<glob pattern="*.hndf">
	<glob pattern="*.hrdf">
    </mime-type>
</mime-info>
